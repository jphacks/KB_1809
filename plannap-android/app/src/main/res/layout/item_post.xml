<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.plan.post.PlanPostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="192dp">

        <ImageView
                android:id="@+id/post_picture"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/comment_layouts" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comment_layouts"
                android:layout_width="0dp"
                android:layout_height="160dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:layout_constraintStart_toEndOf="@+id/post_picture" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/post_picture"
                app:layout_constraintBottom_toBottomOf="@+id/post_picture">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_comment"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>