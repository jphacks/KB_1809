<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="data"
                type="studio.aquatan.plannap.data.model.Plan" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/card"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:stateListAnimator="@animator/selector_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground">

                <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/user_icon_width"
                        android:layout_height="@dimen/user_icon_height"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        fresco:roundAsCircle="true"
                        app:imageUri="@{data.user.iconUrl}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:actualImageResource="@tools:sample/avatars"/>

                <TextView
                        android:id="@+id/plan_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{data.name}"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Plan name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toEndOf="@+id/user_icon"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textColor="@color/grey_900"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{data.user.username}"
                        android:singleLine="true"
                        tools:text="Username"
                        app:layout_constraintTop_toBottomOf="@+id/plan_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="@+id/plan_name"/>

                <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/plan_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        fresco:actualImageScaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/user_icon"
                        app:layout_constraintDimensionRatio="h,172:97"
                        tools:scaleType="centerCrop"
                        tools:actualImageResource="@tools:sample/backgrounds/scenic"/>

                <TextView
                        android:id="@+id/start_spot_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_start_spot"
                        app:layout_constraintTop_toBottomOf="@+id/plan_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:id="@+id/start_spot_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Start Spot"
                        app:layout_constraintTop_toTopOf="@+id/start_spot_header"
                        app:layout_constraintBottom_toBottomOf="@+id/start_spot_header"
                        app:layout_constraintStart_toEndOf="@+id/duration_header"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/created_date"
                        android:layout_marginEnd="8dp"/>

                <TextView
                        android:id="@+id/goal_spot_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_goal_spot"
                        app:layout_constraintTop_toBottomOf="@+id/start_spot_header"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/goal_spot_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Goal Spot"
                        app:layout_constraintTop_toTopOf="@+id/goal_spot_header"
                        app:layout_constraintBottom_toBottomOf="@+id/goal_spot_header"
                        app:layout_constraintStart_toEndOf="@+id/duration_header"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <TextView
                        android:id="@+id/duration_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_duration"
                        app:layout_constraintTop_toBottomOf="@+id/goal_spot_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/favorite_button"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:id="@+id/duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="120åˆ†"
                        app:layout_constraintStart_toEndOf="@+id/duration_header"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/duration_header"
                        app:layout_constraintBottom_toBottomOf="@+id/duration_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>


                <studio.aquatan.plannap.view.widget.FavoriteButton
                        android:id="@+id/favorite_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pink_600"
                        app:favorite="@{data.favorite}"
                        app:count="@{data.favoriteCount}"
                        app:iconTint="@color/pink_600"
                        app:rippleColor="@color/pink_300"
                        app:layout_constraintEnd_toStartOf="@+id/comment_button"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/comment_button"
                        tools:icon="@drawable/ic_favorite_border_black_24dp"
                        tools:text="7"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/comment_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/grey_500"
                        app:iconTint="@color/grey_500"
                        app:rippleColor="@color/grey_400"
                        app:icon="@drawable/ic_mode_comment_white_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        tools:text="10"/>

                <TextView
                        android:text="@{data.date}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/created_date"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        tools:text="2018/01/01"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/plan_image"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>