<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.plan.post.PlanPostActivity">

    <data>

        <variable
                name="data"
                type="studio.aquatan.plannap.data.model.Comment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/user_icon_width_small"
                android:layout_height="@dimen/user_icon_height_small"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                fresco:roundAsCircle="true"
                app:imageUri="@{data.user.iconUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:actualImageResource="@tools:sample/avatars"/>

        <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{data.user.username}"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="username"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/user_icon"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/user_icon"
                app:layout_constraintBottom_toBottomOf="@+id/user_icon"/>

        <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{data.text}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/user_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                tools:text="@tools:sample/lorem"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>